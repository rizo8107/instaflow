{
  "name": "instaflow-backend",
  "description": "Instagram Automation Platform Backend API",
  "version": "1.0.0",
  "repository": "https://github.com/rizo8107/instaflow.git",
  "services": {
    "backend": {
      "env": {
        "META_APP_ID": "${META_APP_ID}",
        "META_APP_SECRET": "${META_APP_SECRET}",
        "REDIRECT_URI": "${REDIRECT_URI}",
        "PORT": "3001"
      },
      "resources": {
        "memory": "1024M",
        "cpu": 1
      }
    }
  },
  "volumes": {
    "data": {
      "mountPath": "/app/data"
    }
  }
}
